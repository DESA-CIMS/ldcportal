<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.1.0+</version>
	</compatibility>
	<theme id="ldcportal-v2" name="LDC Portal v2">
		<color-scheme name="Light Blue" id="01">
			<css-class>lightblue</css-class>
			<color-scheme-images-path>
				${images-path}/color_schemes/${css-class}
			</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Dark Blue">
			<css-class>darkblue</css-class>
		</color-scheme>
		<color-scheme id="03" name="Green">
			<css-class>green</css-class>
		</color-scheme>
		<color-scheme id="04" name="Red">
			<css-class>red</css-class>
		</color-scheme>
	</theme>
</look-and-feel>