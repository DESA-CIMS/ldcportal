<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0">
	<portlet>
		<portlet-name>ldcportal-ism-plugin-applications</portlet-name>
		<display-name>ISM Plugin Applications</display-name>
		<portlet-class>org.un.ldcportal.ismapplications.portlet.ISMApplicationsPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/applications/view.jsp</value>
		</init-param>		
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ISM Plugin Applications</title>
			<short-title>ISM Plugin Applications</short-title>
			<keywords>ISM Plugin Applications</keywords>
		</portlet-info>		
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>ldcportal-ism-plugin-admin</portlet-name>
		<display-name>ISM Plugin Admin</display-name>
		<portlet-class>org.un.ldcportal.ismapplications.portlet.ISMAdminPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/admin/view.jsp</value>
		</init-param>
		<init-param>
			<name>add-process-action-success-action</name>
			<value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ISM Plugin Admin</title>
			<short-title>ISM Plugin Admin</short-title>
			<keywords>ISM Plugin Admin</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>ldcportal-ism-plugin-categories</portlet-name>
		<display-name>ISM Plugin Categories</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/categories/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ISM Plugin Categories</title>
			<short-title>ISM Plugin Categories</short-title>
			<keywords>ISM Plugin Categories</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>